
<div class="container mt-5">

  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">

      <div class="card shadow-lg border-0 rounded-4">

        <!-- Encabezado -->
        <div class="card-header text-white text-center py-4"
             style="background: linear-gradient(135deg, #0d6efd, #0a58ca);">
          <h3 class="mb-0 fw-bold">Orden de Compra Nº <%= @order.id %></h3>
        </div>

        <!-- Cuerpo -->
        <div class="card-body p-5">

          <ul class="list-group list-group-flush mb-4">

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong>Número de orden:</strong>
              <span><%= @order.id %></span>
            </li>

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong>Nombre del proveedor:</strong>
              <span><%= @order.service.user.first_name %></span>
            </li>

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong>Nombre del cliente:</strong>
              <span><%= @order.user.first_name %></span>
            </li>

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong>Domicilio del servicio:</strong>
              <span><%= @order.service_address %></span>
            </li>

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong>Fecha de servicio:</strong>
              <span><%= l(@order.date, format: :long) %></span>
            </li>

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong>Hora de inicio:</strong>
              <span>
                <% if @order.start_time.present? %>
                  <%= l(@order.start_time, format: :hour_only) %>
                <% else %>
                  <em>No definido</em>
                <% end %>
              </span>
            </li>

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong>Hora de cierre:</strong>
              <span>
                <% if @order.end_time.present? %>
                  <%= l(@order.end_time, format: :hour_only) %>
                <% else %>
                  <em>No definido</em>
                <% end %>
              </span>
            </li>

            <li class="list-group-item py-3 d-flex justify-content-between">
              <strong class="text-success">Precio total:</strong>
              <span class="fw-bold text-success">
                $<%= number_to_currency(@order.total_price, unit: "", delimiter: ".", separator: ",") %>
              </span>
            </li>

          </ul>

          <!-- Botón dentro de la card -->
          <div class="d-flex justify-content-end">
            <%= link_to "Editar",
                edit_order_path(@order),
                class: "btn btn-success rounded-5 shadow-sm px-4 ms-2" %>
          </div>


        </div> <!-- card-body -->

      </div> <!-- card -->

    </div>
  </div>
</div>
