<div class="container-fluid py-4 dashboard">
  <div class="row g-3">
    <!-- Sidebar -->
    <aside class="col-12 col-lg-3">
      <div class="card shadow-sm sidebar-card sticky-lg-top">
        <div class="card-body bg-white rounded-5">
          <div class="d-flex align-items-center mb-3">
            <% if current_user&.user_photo&.attached? %>
              <%= image_tag current_user.user_photo, class: "rounded-circle avatar-sm flex-shrink-0", alt: "#{current_user.first_name}" %>
            <% else %>
              <div class="rounded-circle bg-secondary-subtle text-secondary-emphasis d-inline-flex align-items-center justify-content-center avatar-sm flex-shrink-0">
                <span class="fw-semibold"><%= current_user.first_name.first %></span>
              </div>
            <% end %>
            <div class="ms-2">
              <h6 class="mb-0"><%= current_user.first_name %></h6>
              <small class="text-muted">Cliente</small>
            </div>
          </div>

          <nav class="nav flex-column nav-pills gap-1">
            <%= link_to "Todas Mis Ordenes", dashboard_index_path, class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
            <%= link_to "Mis Ordenes Pendientes", dashboard_index_path(pending: true), class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
            <%= link_to "Historial de Órdenes", dashboard_index_path(history: true), class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
          </nav>


        </div>

      </div>
    </aside>

    <!-- Main -->
    <main class="col-12 col-lg-9">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0 text-primary fw-semibold">Mis Ordenes</h1>
      </div>

      <div class="card shadow-sm">
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="bg-primary text-white text-center">Servicio</th>
                <th class="bg-primary text-white text-center">Fecha</th>
                <th class="bg-primary text-white text-center">Hora</th>
                <th class="bg-primary text-white text-center">Proveedor</th>
                <th class="bg-primary text-white text-center">Precio</th>
                <th class="bg-primary text-white text-center">Estado</th>
                <th class="text-end bg-primary text-white text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr class="service-row">
                  <td class="text-muted lh-1 text-center bg-white"><%= order.service.sub_category %></td>
                  <td class="text-muted text-center bg-white"><%= order.date %></td>
                  <td class="text-muted text-center bg-white"><%= order.start_time.strftime("%H:%M") if order.start_time.present? %></td>
                  <td class="text-muted text-center bg-white"><%= order.service.user.first_name %></td>
                  <td class="text-center bg-white"><%= number_to_currency(order.total_price, unit: "$", precision: 0, separator: ",", delimiter: "." ) %></td>
                  <td class="text-center bg-white">
                    <%= order.status %>
                  </td>
                  <td class="text-end text-center bg-white">
                    <%= link_to "Ver", order_path(order), class: "link-danger fw-semibold mx-2" %>
                    <%= link_to "Editar", edit_order_path(order), class: "link-primary fw-semibold mx-2" %>
                    <%= link_to "Reseña", new_order_review_path(order), class: "link-warning fw-semibold mx-2" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Reviews -->

      <div class="container my-4">
      <h2 class="text-primary">Mis Calificaciones</h2>

      <div class="card border shadow mb-4 rounded-4 bg-white">
        <div class="card-body d-flex align-items-center gap-3">
          <h2 class="h5 pt-1">Rating Global:</h2>
          <div class="d-flex align-items-center gap-3">
            <div class="fs-4 pb-1">
              <% avg = @client_avg %>
              <% count = @client_count %>
              <div class="small text-muted">
                <span class="text-warning">
                  <%= "★" * avg.round %><span class="text-secondary"><%= "☆" * (5-avg.round) %></span>
                </span>
                <%= avg %> (<%= count %> <%= "review".pluralize(count) %>)
              </div>
            </div>
          </div>

          <p class="mt-3 mb-0 text-muted">
            <%= @service.try(:provider_bio).presence || "" %>
          </p>
        </div>
      </div>

      <!-- Reviews -->
      <div class="reviews">
        <h3 class="bg-success text-white mb-3 p-2 shadow-sm rounded-4">Reviews</h3>
        <% scope = current_user.reviews_as_client.where(target: 1) %>
        <% if scope.any? %>
          <% scope.each do |review| %>
            <div class="border shadow-sm bg-white rounded-4 p-3 mb-3">
              <div class="d-flex align-items-start justify-content-between">
                <div class="d-flex flex-column me-3 flex-shrink-0">
                  <div class="fw-semibold"><%= review.supplier&.first_name || "Anónimo" %></div>
                  <% filled = review.rating.to_i %>
                  <div class="text-warning small text-nowrap">
                    <%= ("★" * filled + "☆" * (5 - filled)).html_safe %>
                  </div>
                </div>

                <p class="mb-0 flex-grow-1 mx-3"><%= review.content %></p>

                <div class="small text-muted text-nowrap ms-3">
                  <%= time_ago_in_words(review.created_at) %> ago
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted">No tienes reviews.</p>
        <% end %>
      </div>

      </div>

    </main>
  </div>
</div>
