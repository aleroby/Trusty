<% if message.role == "user" %>
  <div id="<%= dom_id(message) %>" class="d-flex justify-content-end mt-3">
    <div class="chat-bubble from-me ms-auto text-white">
      <%= simple_format(message.content, {}, wrapper_tag: "span") %>
      <div class="text-end text-muted small mt-1">
        <%= l message.created_at, format: :short %>
      </div>
    </div>
  </div>
<% elsif message.role == "assistant" %>
  <div id="<%= dom_id(message) %>" class="d-flex justify-content-start mt-3">
    <div class="chat-bubble">
      <%= raw(render_markdown(message.content)) %>
      <div class="text-end text-muted small">
        <%= l message.created_at, format: :short %>
      </div>
    </div>
  </div>
<% end %>
