          <div class="mb-3">
            <%= image_tag service[:image], 
                class: "service-image img-fluid rounded-4 shadow-sm", 
                alt: service[:title] %>
          </div>

          <div>
            <span class="category-badge px-3 py-2 fw-semibold d-inline-block">
              <%= service[:title] %>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
