<div class="card h-100 shadow-sm rounded-4 human-chat-conversation">
  <div class="card-header bg-white border-0 d-flex align-items-center">
    <% counterpart = chat.client == current_user ? chat.supplier : chat.client %>
    <div class="me-3">
      <% if counterpart&.user_photo&.attached? %>
        <%= cl_image_tag counterpart.user_photo.key,
                         width: 48, height: 48,
                         crop: "fill", gravity: "auto",
                         class: "rounded-circle object-fit-cover" %>
      <% else %>
        <div class="avatar-placeholder rounded-circle text-center bg-light text-muted fw-bold p-2">
          <%= counterpart&.first_name&.first || "?" %>
        </div>
      <% end %>
    </div>
    <div>
      <strong><%= counterpart&.first_name || "Usuario" %></strong>
      <div class="text-muted small"><%= chat.service.sub_category %> · <%= chat.service.user.first_name %></div>
    </div>
  </div>

  <div class="card-body d-flex flex-column gap-2 overflow-auto">
    <% if messages.any? %>
      <% messages.each do |message| %>
        <div class="chat-bubble <%= 'from-me ms-auto text-white bg-primary' if message.user == current_user %>">
          <%= simple_format(message.content, {}, wrapper_tag: "span") %>
          <div class="text-end text-muted small mt-1">
            <%= l message.created_at, format: :short %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center text-muted my-5">
        Todavía no hay mensajes en este chat.
      </div>
    <% end %>
  </div>

  <div class="card-footer bg-white border-0">
    <%= form_with model: [chat, Human::Message.new],
                  url: human_chat_messages_path(chat),
                  data: { turbo_frame: "human_chats_conversation" },
                  class: "d-flex gap-2" do |f| %>
      <%= f.text_area :content,
                      class: "form-control flex-grow-1 rounded-4",
                      rows: 2,
                      placeholder: "Escribí tu mensaje..." %>
      <%= f.submit "Enviar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
