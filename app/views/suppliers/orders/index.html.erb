<div class="container-fluid py-4 dashboard">
  <div class="row g-3">
    <!-- Sidebar -->
    <aside class="col-12 col-lg-3">
      <div class="card shadow-sm sidebar-card sticky-lg-top">
        <div class="card-body bg-white rounded-5">
          <div class="d-flex align-items-center mb-3">
            <% if current_user&.user_photo&.attached? %>
              <%= image_tag current_user.user_photo, class: "rounded-circle avatar-sm flex-shrink-0", alt: "#{current_user.first_name}" %>
            <% else %>
              <div class="rounded-circle bg-secondary-subtle text-secondary-emphasis d-inline-flex align-items-center justify-content-center avatar-sm flex-shrink-0">
                <span class="fw-semibold"><%= current_user.first_name.first %></span>
              </div>
            <% end %>
            <div class="ms-2">
              <h6 class="mb-0"><%= current_user.first_name %></h6>
              <small class="text-muted">Proveedor</small>
            </div>
          </div>

            <nav class="nav flex-column nav-pills gap-1">
              <%= link_to "Mis Servicios", suppliers_dashboard_index_path, class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
              <%= link_to "Ordenes Pendientes", suppliers_orders_path(status: "confirmed"), class: "nav-link border bg-light fw-semibold text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
              <%= link_to "Historial de Órdenes", suppliers_orders_path(status: "completed"), class: "nav-link border bg-light fw-semibold text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
              <%= link_to "Mi Disponibildad Semanal", suppliers_availabilities_path, class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
            </nav>

          <div class="card mt-4 border rounded-4 shadow-sm bg-light-subtle">
            <div class="card-body p-3">
              <p class="small mb-2 text-muted">¿Necesitas inspiración?</p>
              <p class="text-center">
                <%= link_to "Usa el Asistente de IA para crear servicios",
                          new_suppliers_service_path(ai: true),
                          class: "link-primary fw-semibold text-decoration-none" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main -->

    <main class="col-12 col-lg-9">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h2 text-primary mb-0">Ordenes</h1>
      </div>

      <div class="card shadow-sm">
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="bg-primary text-white text-center">Fecha</th>
                <th class="bg-primary text-white text-center">Hora</th>
                <th class="bg-primary text-white text-center">Servicio</th>
                <th class="bg-primary text-white text-center">Cliente</th>
                <th class="bg-primary text-white text-center">Precio Total</th>
                <th class="bg-primary text-white text-center">Estado</th>
                <th class="bg-primary text-white text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% current_user.services.each do |service| %>
                <% selected_orders = service.orders.select { |order| order.status == params[:status] } %>
                <% selected_orders.each do |order| %>
                  <tr class="service-row">
                    <td class="text-muted text-center"><%= order.date %></td>
                    <td class="text-muted text-center"><%= l(order.start_time, format: :hour_only) %></td>
                    <td class="fw-semibold text-center">
                      <%= order.service.sub_category %>
                    </td>
                    <td class="text-muted text-center"><%= order.user.first_name %></td>
                    <td class="text-center"><%= number_to_currency(order.total_price, unit: "$", precision: 0) %></td>
                    <td class="text-center">
                      <%= order.status %>
                    </td>
                    <td class="text-end">
                      <%= link_to "Ver", order_path(order), class: "text-decoration-none link-primary mx-2 fw-semibold" %>
                      <%= link_to "Editar", edit_order_path(order), class: "text-decoration-none link-success fw-semibold" %>
                      <%= link_to "Reseña", new_order_review_path(order), class: "text-decoration-none text-warning mx-2 fw-semibold" %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

  </div>
</div>
