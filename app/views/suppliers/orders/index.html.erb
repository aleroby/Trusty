<div class="container-fluid py-4 dashboard">
  <div class="row g-3">
    <!-- Sidebar -->
    <aside class="col-12 col-lg-3">
      <div class="card shadow-sm sidebar-card sticky-lg-top">
        <div class="card-body bg-white rounded-5">
          <div class="mb-3">
            <span class="fs-5 bg-success shadow-sm text-white p-2 px-3 rounded-4 d-inline-block w-100 text-start">
              Panel de Proveedor
            </span>
            <hr class="mt-3 mb-0">
          </div>

            <nav class="nav flex-column nav-pills gap-1">
              <%= link_to "Mis Servicios", suppliers_dashboard_index_path, class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
              <%= link_to "Ordenes Pendientes", suppliers_orders_path(status: "confirmed"), class: "nav-link border bg-light fw-semibold text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
              <%= link_to "Historial de Órdenes", suppliers_orders_path(status: "completed"), class: "nav-link border bg-light fw-semibold text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
              <%= link_to "Mi Disponibildad Semanal", suppliers_availabilities_path, class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
            </nav>

          <div class="card mt-4 border rounded-4 shadow-sm bg-light-subtle">
            <div class="card-body p-3">
              <p class="small mb-2 text-muted">¿Necesitas inspiración?</p>
              <p class="text-center">
                <%= link_to "Usa el Asistente de IA para crear servicios",
                          new_suppliers_service_path(ai: true),
                          class: "link-primary fw-semibold text-decoration-none" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main -->

    <main class="col-12 col-lg-9">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary mb-0">Ordenes</h3>
      </div>

      <div class="card shadow-sm rounded-4">
        <div class="table-responsive rounded-4">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="bg-primary text-white text-center">Fecha</th>
                <th class="bg-primary text-white text-center">Hora</th>
                <th class="bg-primary text-white text-center">Servicio</th>
                <th class="bg-primary text-white text-center">Precio Total</th>
                <th class="bg-primary text-white text-center">Estado</th>
                <th class="bg-primary text-white text-center">Cliente</th>
                <th class="bg-primary text-white text-center">Reseña</th>
                <th class="bg-primary text-white text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% current_user.services.each do |service| %>
                <% selected_orders = service.orders.select { |order| order.status == params[:status] } %>
                <% selected_orders.each do |order| %>
                  <tr class="service-row">
                    <td class="bg-white text-muted text-center"><%= order.date.strftime("%d/%m/%Y") %></td>
                    <td class="bg-white text-muted text-center"><%= l(order.start_time, format: :hour_only) %></td>
                    <td class="bg-white fw-semibold text-center">
                      <%= order.service.sub_category %>
                    </td>
                    <td class="bg-white text-center"><%= number_to_currency(order.total_price, unit: "$", precision: 0) %></td>
                    <td class="bg-white text-center">
                      <%=
                        case order.status
                      when "confirmed" then "Confirmado"
                      when "pending" then "Pendiente"
                      when "canceled" then "Cancelado"
                      when "completed" then "Completado"
                      else order.status
                      end
                    %>
                    </td>
                    <td class="bg-white text-muted text-center"><%= order.user.first_name %></td>
                    <td class="text-center bg-white">
                      <% client_review = order.client_review %>
                      <% if !order.finished? %>
                        <span class="text-muted">
                          <% 5.times do %>
                            <i class="fa-regular fa-star"></i>
                          <% end %>
                        </span>
                      <% elsif order.reviewable_by?(current_user) %>
                        <%= link_to new_order_review_path(order), class: "fw-semibold text-decoration-none", style: "color: #FD1015" do %>
                          Calificar
                          <i class="fa-solid fa-star me-1"></i>
                        <% end %>
                      <% elsif client_review.present? %>
                        <% rating = client_review.rating.to_f %>
                        <% full = rating.floor %>
                        <% half = ((rating - full) >= 0.5 ? 1 : 0) %>
                        <% empty = 5 - full - half %>
                        <span class="text-warning me-2">
                          <% full.times { %><i class="fa-solid fa-star"></i><% } %>
                          <% if half == 1 %><i class="fa-solid fa-star-half-stroke"></i><% end %>
                          <% empty.times { %><i class="fa-regular fa-star"></i><% } %>
                          (<%= rating.round(0) %>)
                        </span>
                      <% else %>
                        <span class="text-muted small">Sin reseña</span>
                      <% end %>
                    </td>
                    <td class="bg-white text-center">
                      <%= link_to order_path(order), class: "text-decoration-none link-primary mx-2 fw-semibold" do %>
                        <i class="fa-solid fa-eye"></i>
                      <% end %>
                      <%= link_to edit_order_path(order), class: "text-decoration-none link-success fw-semibold" do %>
                        <i class="bi bi-pencil-square"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

  </div>
</div>
