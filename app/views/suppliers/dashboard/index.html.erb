<div class="container-fluid py-4 supplier-dashboard">
  <div class="row g-3">
    <!-- Sidebar -->
    <aside class="col-12 col-lg-3">
      <div class="card shadow-sm sidebar-card sticky-lg-top">
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <% if current_user&.user_photo&.attached? %>
              <%= image_tag current_user.user_photo, class: "rounded-circle avatar-sm flex-shrink-0", alt: "#{current_user.first_name}" %>
            <% else %>
              <div class="rounded-circle bg-secondary-subtle text-secondary-emphasis d-inline-flex align-items-center justify-content-center avatar-sm flex-shrink-0">
                <span class="fw-semibold"><%= current_user.first_name %></span>
              </div>
            <% end %>
            <div class="ms-2">
              <h6 class="mb-0"><%= current_user.first_name %></h6>
              <small class="text-muted">Proveedor</small>
            </div>
          </div>

          <nav class="nav flex-column nav-pills gap-1">
            <%= link_to "Inicio", suppliers_dashboard_index_path, class: "nav-link d-flex align-items-center #{'active' if current_page?(suppliers_dashboard_index_path)}" %>
            <%= link_to "Mis Servicios", services_path, class: "nav-link d-flex align-items-center #{'active' if controller_name == 'services'}" %>
            <%= link_to "Ordenes Pendientes", suppliers_orders_path, class: "nav-link d-flex align-items-center #{'active' if controller_name == 'requests'}" %>
            <%= link_to "Historial de Órdenes", orders_path, class: "nav-link d-flex align-items-center #{'active' if controller_name == 'orders'}" %>
            <%= link_to "Mis Calificaciones", "reviews_path", class: "nav-link d-flex align-items-center #{'active' if controller_name == 'reviews'}" %>
          </nav>

          <div class="card mt-4 border-0 bg-light-subtle">
            <div class="card-body p-3">
              <p class="small mb-2 text-muted">¿Necesitas inspiración?</p>
              <%= link_to "Usa el Asistente de IA para crear servicios",
                          new_suppliers_service_path(ai: true),
                          class: "stretched-link link-primary fw-semibold text-decoration-none" %>
            </div>
          </div>
        </div>

        <div class="card-footer bg-white">
          <ul class="list-unstyled small mb-0">
            <li class="mb-2">
              <%= link_to "Ayuda", "", class: "text-decoration-none d-inline-flex align-items-center gap-2" %>
            </li>
            <li>
              <%= link_to "Cuenta", edit_user_registration_path, class: "text-decoration-none d-inline-flex align-items-center gap-2" %>
            </li>
          </ul>
        </div>
      </div>
    </aside>

    <!-- Main -->
    <main class="col-12 col-lg-9">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h2 text-primary mb-0">Mis Servicios</h1>
        <%= link_to "+ Añadir nuevo", new_suppliers_service_path, class: "btn btn-primary rounded-4" %>
      </div>

      <div class="card shadow-sm">
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Servicio</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Estado</th>
                <th class="text-end">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% current_user.services.each do |service| %>
                <tr class="service-row">
                  <td class="fw-semibold">
                    <%= link_to service.sub_category, service_path(service), class: "text-decoration-none" %>
                  </td>
                  <td class="text-muted"><%= service.category %></td>
                  <td><%= number_to_currency(service.price, unit: "$", precision: 0) %></td>
                  <td>
                    <% if service.published? %>
                      <span class="badge rounded-pill bg-success-subtle text-success-emphasis px-3">Publicado</span>
                    <% else %>
                      <span class="badge rounded-pill bg-danger-subtle text-danger-emphasis px-3">Oculto</span>
                    <% end %>
                  </td>
                  <td class="text-end">
                    <%= link_to "Editar",  edit_suppliers_service_path(service), class: "link-primary fw-semibold" %>
                  </td>
                </tr>
              <% end %>
              <% if current_user.services.blank? %>
                <tr>
                  <td colspan="5" class="text-center py-5 text-muted">
                    Aún no tienes servicios. <%= link_to "Crea el primero aquí", new_suppliers_service_path %>.
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</div>
