<div class="container-fluid py-4 dashboard">
  <div class="row g-3">
    <!-- Sidebar -->
    <aside class="col-12 col-lg-3">
      <div class="card shadow-sm sidebar-card sticky-lg-top">
        <div class="card-body bg-white rounded-5">
          <div class="mb-3">
            <span class="fs-5 bg-success shadow-sm text-white p-2 px-3 rounded-4 d-inline-block w-100 text-start">
              Panel de Proveedor
            </span>
            <hr class="mt-3 mb-0">
          </div>

          <nav class="nav flex-column nav-pills gap-1">
            <%= link_to "Mis Servicios", suppliers_dashboard_index_path, class: "nav-link border text-secondary bg-light fw-semibold shadow-sm d-flex align-items-center hover-dashboard" %>
            <%= link_to "Ordenes Pendientes", suppliers_orders_path(status: "confirmed"), class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
            <%= link_to "Historial de Órdenes", suppliers_orders_path(status: "completed"), class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
            <%= link_to "Mi Disponibildad Semanal", suppliers_availabilities_path, class: "nav-link border text-secondary shadow-sm d-flex align-items-center hover-dashboard" %>
          </nav>

          <div class="card mt-4 border rounded-4 shadow-sm bg-light-subtle">
            <div class="card-body p-3">
              <p class="small mb-2 text-muted">¿Necesitas inspiración?</p>
              <p class="text-center">
                <%= link_to "Usa el Asistente de IA para crear servicios",
                          new_suppliers_service_path(ai: true),
                          class: "link-primary fw-semibold text-decoration-none" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main -->
    <main class="col-12 col-lg-9">
      <div class="d-flex justify-content-between align-items-center mx-2 mb-3">
        <h3 class="text-primary mb-0">Mis Servicios</h3>
        <%= link_to "+ Añadir nuevo", new_suppliers_service_path, class: "btn btn-primary rounded-4" %>
      </div>

      <div class="card mx-2 shadow-sm rounded-4">
        <div class="table-responsive rounded-4">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="bg-primary text-white text-center">Servicio</th>
                <th class="bg-primary text-white text-center">Categoría</th>
                <th class="bg-primary text-white text-center">Precio</th>
                <th class="bg-primary text-white text-center">Rating</th>
                <th class="bg-primary text-white text-center">Estado</th>
                <th class="bg-primary text-white text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% current_user.services.each do |service| %>
                <tr class="service-row">
                  <td class="fw-semibold text-center bg-white">
                    <%= link_to service.sub_category, service_path(service), class: "text-decoration-none" %>
                  </td>
                  <td class="text-muted text-center bg-white"><%= service.category %></td>
                  <td class="text-center text-muted small bg-white"><%= number_to_currency(service.price, unit: "$", precision: 0) %></td>

                  <!-- Inicio Bloque rating de cada servicio -->

                  <% service_reviews = service.supplier_reviews %>
                  <% rating = service_reviews.average(:rating).to_f %>
                  <% count  = service_reviews.count %>
                  <% full   = rating.floor %>
                  <% half   = ((rating - full) >= 0.5 ? 1 : 0) %>
                  <% empty  = 5 - full - half %>

                  <td class="text-center text-muted small bg-white">
                    <span class="text-warning">
                      <% full.times { %><i class="fa-solid fa-star"></i><% } %>
                      <% if half == 1 %><i class="fa-solid fa-star-half-stroke"></i><% end %>
                      <% empty.times { %><i class="fa-regular fa-star"></i><% } %>
                    </span>
                    <%= rating.round(2) %> (<%= count %>)
                  </td>

                  <!-- Fin Bloque rating de cada servicio -->

                  <td class="text-center bg-white">
                    <% if service.published? %>
                      <span class="badge rounded-pill bg-success-subtle text-success-emphasis px-3">Publicado</span>
                    <% else %>
                      <span class="badge rounded-pill bg-danger-subtle text-danger-emphasis px-3">Oculto</span>
                    <% end %>
                  </td>
                  <td class="text-center bg-white">
                    <%= link_to service_path(service), class: "text-decoration-none link-primary mx-2 fw-semibold" do %>
                      <i class="fa-solid fa-eye"></i>
                    <% end %>
                    <%= link_to edit_suppliers_service_path(service), class: "text-decoration-none link-success fw-semibold" do %>
                      <i class="bi bi-pencil-square"></i>
                    <% end %>
                    <%= link_to suppliers_service_path(service),
                        class: "text-decoration-none text-warning mx-2 fw-semibold",
                        data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar este servicio?" } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <% if current_user.services.blank? %>
                <tr>
                  <td colspan="5" class="text-center py-5 text-muted">
                    Aún no tienes servicios. <%= link_to "Crea el primero aquí", new_suppliers_service_path %>.
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Reviews -->

      <div class="container my-4">
        <h3 class="text-primary">Mis Calificaciones</h3>

      <div class="card border shadow mb-4 rounded-4 bg-white">
        <div class="card-body d-flex align-items-center gap-3">
          <h2 class="h5 pt-1">Rating Global:</h2>
          <div class="d-flex align-items-center">
            <div class="fs-5 pb-1">
              <% rating = @supplier_avg.to_f %>
              <% full_stars = rating.floor %>
              <% half_star  = ((rating - full_stars) >= 0.5 ? 1 : 0) %>
              <% empty_stars = 5 - full_stars - half_star %>
              <div class="small text-muted">
                <span class="text-warning">
                  <% full_stars.times { %><i class="fa-solid fa-star"></i><% } %>
                  <% if half_star == 1 %><i class="fa-solid fa-star-half-stroke"></i><% end %>
                  <% empty_stars.times { %><i class="fa-regular fa-star"></i><% } %>
                </span>
                <%= rating.round(2) %> (<%= @supplier_count %> <%= "review".pluralize(@supplier_count) %>)
              </div>
            </div>
          </div>

          <p class="mt-3 mb-0 text-muted">
            <%= @service.try(:provider_bio).presence || "" %>
          </p>
        </div>
      </div>

      <!-- Reviews -->
      <div class="reviews">
        <h3 class="bg-success fs-4 text-white mb-3 p-2 px-3 shadow-sm rounded-4">Reseñas</h3>

        <% scope = current_user.reviews_as_supplier.where(target: 0) %>
        <% if scope.any? %>
          <% scope.each do |review| %>
            <div class="border bg-white shadow-sm rounded-4 p-3 mb-3">
              <div class="d-flex align-items-start justify-content-between">
                <div class="d-flex flex-column me-3 flex-shrink-0">
                  <div class="fw-semibold"><%= review.client&.first_name || "Anónimo" %></div>
                  <% filled = review.rating.to_i %>
                  <div class="text-warning small text-nowrap">
                    <%= ("★" * filled + "☆" * (5 - filled)).html_safe %>
                  </div>
                </div>

                <p class="mb-0 flex-grow-1 mx-3"><%= review.content %></p>

                <div class="small text-muted text-nowrap ms-3">
                  <%= time_ago_in_words(review.created_at) %> ago
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted">No hay reviews para este servicio.</p>
        <% end %>
      </div>

      </div>

    </main>
  </div>
</div>
