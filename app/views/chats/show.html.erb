
<div class="container bg-white p-3 shadow overflow-hidden mx-auto my-4 rounded-4" style="max-width: 800px;">
  <div class="d-flex justify-content-between text-primary mb-3">
    <h3>
      <% if @chat.title != "Nuevo Chat" %>
        <%= @chat.title %>
      <% else %>
        <%= "Nuevo Chat" %>
      <% end %>
    </h3>
    <div class="text-center text-md-start ">
      <%= link_to "Back to Chats", chats_path, class:"btn btn-success rounded-4 text-white" %>
    </div>
  </div>

  <div class="container bg-body p-3 shadow overflow-auto mx-auto my-3 rounded-5" style="max-width: 800px; max-height: 60vh;">
    <% @chat.messages.each do |message| %>
      <% if message.role == "user" %>
        <div class="d-flex justify-content-end">
          <div class="bg-chat border px-3 pt-1 m-2 rounded-4">
            <p class="mb-0"><%= message.content %></p>
          </div>
        </div>
      <% elsif message.role == "assistant" %>
        <div class="d-flex justify-content-start">
          <div class="bg-white border px-3 pt-2 m-2 rounded-4 text-start ai-reply">
            <%= raw(render_markdown(message.content)) %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


<div class="sticky-bottom bg-white p-3 shadow mx-auto my-4 rounded-4" style="max-width: 800px;">
  <%= simple_form_for [@chat, @message], html: { class:"sticky-bottom" } do |f| %>
    <div class="row g-2 align-items-center">

      <div class="col-12 col-md-11">
        <%= f.input :content,
          label: false,
          placeholder: "Escribe tu consulta...",
          input_html: { class: "form-control rounded-5 w-100", style: "min-height: 40px;" } %>
      </div>

      <div class="col-12 col-md-1 d-grid">
        <button type="submit" class="btn btn-primary rounded-circle d-flex align-items-center justify-content-center send-btn">
          <i class="fas fa-paper-plane text-white"></i>
        </button>
      </div>
    </div>
  <% end %>
</div>
